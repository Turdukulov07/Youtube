<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tv_toolbar_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tv_style_fifjalla_one" parent="tv_style">
        <item name="android:fontFamily">@font/fjalla_one</item>
    </style>

    <style name="tv_style_noto_sans" parent="tv_style">
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <style name="rv_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>

    <style name="progress_bar_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminateTint">@color/red</item>
        <item name="android:visibility">gone</item>
    </style>


</resources>